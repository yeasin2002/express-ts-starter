{
    "name": "name",
    "main": "dist/app.js",
    "scripts": {
        "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
        "dev:bun": "bun --hot ./src/app.ts",
        "build": "swc src -d dist",
        "start": "cross-env NODE_ENV=production node ./dist/src/app.js ",
        "watch-compile": "swc src -w --out-dir dist",
        "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/src/app.js",
        "formate": "prettier --write \"src/**/*.ts\" &&  eslint ./src --ext .ts && tsc --noEmit",
        "lint": "oxlint ./src  "
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "http-status-codes": "^2.3.0",
        "mongoose": "^8.2.4"
    },
    "devDependencies": {
        "@swc/cli": "^0.3.9",
        "@swc/core": "^1.4.2",
        "@types/body-parser": "^1.19.5",
        "@types/compression": "^1.7.2",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.10",
        "@types/node": "^20.11.30",
        "@types/nodemailer": "^6.4.14",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "concurrently": "^8.2.2",
        "eslint": "^9.1.0",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.9",
        "nodemon": "^3.0.3",
        "oxlint": "^0.5.3",
        "prettier": "^3.0.3",
        "typescript": "^5.4.3"
    }
}